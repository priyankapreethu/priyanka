#include<stdio.h>
void input(int *a,int *b)
{
        printf("enter two numbers to add\n");
        scanf("%d%d",a,b);
}
void sum(int n1,int n2,int *sum)
{
        *sum=n1+n2;
}
void output(int n1,int n2,int sum)
{
        printf("%d+%d=%d",n1,n2,sum);
}
int main()
{
        int n1,n2,sum;
        input(&n1,&n2);
        sum(n1,n2,&sum);
        output(n1,n2,sum);
}

